.radio
	display flex
	padding-y 8px
	&:not(:last-of-type)
		margin-right 25px

[type='radio']:not(:checked),
[type='radio']:checked
	display none

[type='radio']:not(:checked) + label,
[type='radio']:checked + label
	position relative
	padding-left 34px
	font-size 20px
	font-weight 700
	line-height 28px
	color #000000
	cursor pointer

[type='radio']:not(:checked) + label:before,
[type='radio']:checked + label:before
	content ''
	position absolute
	left 0
	top 0
	width 22px
	height 22px
	border: 4px solid text-color
	border-radius 50%
	cursor pointer

[type='radio']:not(:checked) + label:after,
[type='radio']:checked + label:after
	content ''
	color #094379
	position absolute
	left 9px
	top 9px
	width 12px
	height 12px
	background-color text-color
	border-radius 50%
	transition all .2s

[type='radio']:not(:checked) + label:after
	opacity 0
	transform scale(0)

[type='radio']:checked + label:after
	opacity 1
	transform scale(1)
